<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@null"
    android:layout_gravity="end">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/user_message"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/ic_user_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_message"/>

    <TextView
        android:id="@+id/tv_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hii_tell_me_a_joke"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        android:textColor="@color/black_user_message"
        android:background="@drawable/background_user_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageView3"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:elevation="4dp"
        android:paddingTop="12dp"
        android:paddingStart="12dp"
        android:paddingBottom="12dp"
        android:paddingEnd="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>